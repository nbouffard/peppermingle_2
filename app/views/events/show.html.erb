<div class="container">
  <h1><%= @event.title %></h1>
  <p><strong>Description:</strong> <%= @event.description %></p>
  <p><strong>Date:</strong> <%= @event.date %></p>
  <p><strong>Paid?:</strong> <%= @event.paid? ? 'Yes' : 'No' %></p>
  <p><strong>Created by:</strong> <%= @event.user.user_name %></p>
  <p>Recipe: <%= @event.recipe.title %></p>
  <p>Recipe description: <%= @event.recipe.description %></p>

  <p><strong>Created by:</strong> <%= @event.user.user_name %></p>

  <%= button_to "Destroy", @event, method: :delete if policy(@event).destroy? %>

  <div class="mt-3">
    <div>
      <% if policy(@event).edit? %>
        <%= link_to "✏️", edit_event_path(@event), class: "btn btn-ghost" %>
      <% end %>
    </div>

    <button class="button small-button" data-controller="booking" data-action="click->booking#bookEvent" data-event-id="<%= @event.id %>" data-is-booked="<%= current_user.booked_event?(@event) %>">
      <% if current_user.booked_event?(@event) %>
        Attending
      <% else %>
        Sign Up
      <% end %>
    </button>
  </div>
</div>
