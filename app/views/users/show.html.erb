<% if policy(@user).edit? %>
  <%= link_to "edit", edit_user_path(@user) %>
<% end %>
<div class="profile-container">
  <div class="img-container">
     <% if @user.photo.key %>
        <%= cl_image_tag @user.photo.key, class: 'profile-img-container' %>
    <% else %>
      <%= image_tag "https://images.unsplash.com/photo-1506368249639-73a05d6f6488?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8Nnx8aGVyYnN8ZW58MHx8MHx8fDA%3D&auto=format&fit=crop&w=500&q=60" %>
    <% end %>
  </div>
  <div class="bio-container">
    <h2><%= @user.user_name %></h2>
    <% if @user.location %>
      <p><%= @user.location %></p>
    <% end %>
    <% if @user.bio %>
      <p><%= @user.bio %></p>
    <% else %>
      <p>Bio not yet added...</p>
    <% end %>
    <% if @user.speciality %>
      <p><%= @user.speciality %></p>
    <% end %>
  </div>
</div>






