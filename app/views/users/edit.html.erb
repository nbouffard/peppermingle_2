<div class="form">
  <div class="form-container">
    <div class="container">
      <h2>Update Profile</h2>
      <%= simple_form_for @user do |f| %>
        <%= f.input :user_name, input_html: { class: "form-input-style" } %>
        <%= f.input :first_name, input_html: { class: "form-input-style" } %>
        <%= f.input :last_name, input_html: { class: "form-input-style" } %>
        <%= f.input :location, input_html: { class: "form-input-style" } %>
        <%= f.input :bio, input_html: { class: "form-input-style" } %>
        <%= f.input :speciality, input_html: { class: "form-input-style" } %>
        <%= f.input :photo, as: :file, input_html: { class: "form-input-style" } %>
        <%= button_tag "Edit user", class: "button small-button", style: "margin-top: 30px; margin-bottom:20px" %>
      <% end %>
    </div>
  </div>
</div>
