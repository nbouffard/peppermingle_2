<div id="homepage" class="home-container">
  <div class="slogan-container">
    <div class="slogan">
      <h1 class="underlined-dotted">Share recipes.</h1>
      <h1 class="underlined-solid">Cook together.</h1>
      <h1 class="underlined-wavy">From anywhere in the world.</h1>
      <div class="button-container">
        <%= link_to "Sign up now!", new_user_registration_path, class: "button small-button" %>
      </div>
    </div>
  </div>
  <div class="carousel-container">
    <%= render 'pages/recipe_carousel' %>
  </div>

  <div class="bottom-home-container">
    <div class="events-container">
      <h2>Upcoming Events</h2>
      <% @events.each do |event| %>
        <% if event.date >= Date.today %>
          <%= render partial: 'shared/home_event_card', locals: { event: event } %>
        <% end %>
      <% end %>
    </div>

  <div class="recipes-container">
    <div class="recipes-content">
      <h2>The Latest Recipes</h2>
      <% @recipes.last(5).each do |recipe| %>
        <%= render partial: 'shared/card_small', locals: { recipe: recipe, card_class: 'smaller-card' } %>
      <% end %>
    </div>
    <div class="view-all-recipes-link">
      <%= button_to recipes_path, class: "button small-button-view-all", method: :get do %>
        View All Recipes <i class="fa-solid fa-angles-right" style="color: #fff;"></i>
      <% end %>
    </div>
  </div>
</div>
