<div class="form">
  <div class="form-container">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :user_name, label: "Username", input_html: { class: "form-input-style" },
                    autofocus: true %>
        <%= f.input :email,
                    required: true,
                    input_html: { autocomplete: "email", class: "form-input-style"} %>
        <%= f.input :password,
                    required: true,
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password", class: "form-input-style"} %>
        <%= f.input :password_confirmation,
                    required: true,
                    input_html: { autocomplete: "new-password", class: "form-input-style"} %>
      </div>

      <%= button_tag "Sign up", class: "button small-button", style: "margin-top: 30px; margin-bottom:20px" %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
