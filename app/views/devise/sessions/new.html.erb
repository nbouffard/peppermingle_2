<div class="form">
  <div class="form-container">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-input-style" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-input-style" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <%= button_tag "Log in", class: "button small-button", style: "margin-top: 30px; margin-bottom:20px" %>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
