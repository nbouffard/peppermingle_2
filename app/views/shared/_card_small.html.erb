<%= link_to recipe_path(recipe), class: "small-card-link"  do %>
  <div class="small-card <%= card_class %>">
    <% if recipe.images.attached? %>
      <%= cl_image_tag recipe.images.first.blob.key, class: "card-img-background" %>
    <% else %>
      <%= image_tag("default_img_card.jpg", alt: "Recipe Photo", class: "card-img-background") %>
    <% end %>
    <div class="small-card-content">
      <h2><mark><%= recipe.title %></mark></h2>
      <p><mark><%= recipe.description %></mark></p>
    </div>
    <div class="small-card-info">
      <ul class="small-card-icons">
        <li><p><mark><i class="fa-sharp fa-regular fa-clock" style="color: #075d5e;"></i> <%= recipe.prep_time %> mins</p></mark></li>
        <li><p><mark><i class="fa-regular fa-thumbs-up" style="color: #075d5e;"></i><%= recipe.difficulty %></p></mark></li>
      </ul>
    </div>
  </div>
<% end %>
