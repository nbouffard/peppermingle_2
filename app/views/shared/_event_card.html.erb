<div class="recipe-card-container">
  <div class="recipe-card-img">
    <%= cl_image_tag @event.photos.sample.key, height: 300, width: 720, crop: :fill %>
    <div class="recipe-title-container">
      <h3 class="recipe-title"><%= @event.title %></h3>
    </div>
  </div>
  <div class="recipe-card-content">
    <div class="recipe-top-container">
      <div class="stars-container">
        <div class="recipe-reviews">
          <i class="fa-solid fa-star" style="color: #F1B150;"></i>
          <i class="fa-solid fa-star" style="color: #F1B150;"></i>
          <i class="fa-solid fa-star" style="color: #F1B150;"></i>
          <i class="fa-solid fa-star" style="color: #F1B150;"></i>
          <i class="fa-solid fa-star" style="color: #F1B150;"></i>
        </div>
      </div>
      <div class="recipe-icons">
        <p><i class="fa-regular" style="color: #567275;"></i>Date: <%= @event.date %></p>
        <p><i class="fa-regular" style="color: #567275;"></i>Created by: <%= @event.recipe.user.user_name %></p>
        <p><i class="fa-regular" style="color: #567275;"></i>Paid: <%= @event.paid? ? 'Yes' : 'No' %></p>
      </div>
    </div>
    <div class="event-bottom-container">
      <div class="ingredients" id="ingredients-container">
        <h4>Event Description</h4>
        <p class="event-paragraph" id="description-margin"><%= @event.description %></p>
      </div>

      <div class="directions" id="directions-container">

      </div>
    </div>
  </div>
  <div class="recipe-notes">
      <div class="notes-container d-flex ps-5 justify-content-around" >
        <div class="delete-button">
      <%= button_to "Delete", @event, method: :delete if policy(@event).destroy?%>
